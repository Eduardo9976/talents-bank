<h6>HTML show</h6>

<h1> <%= @opportunity.title %> </h1>
<dl>
  <dt>Código da vaga: </dt>
  <dd> <%= @opportunity.code %> </dd>
  <dt>Descrição: </dt>
  <dd> <%= @opportunity.description %> </dd>
  <dt>Habilitades: </dt>
  <dd> <%= @opportunity.skills %> </dd>
  <dt>Salário: </dt>
  <dd> <%= @opportunity.salary %> </dd>
  <dt>Nível:</dt>
  <dd> <%= @opportunity.level %> </dd>
  <dt>Região: </dt>
  <dd> <%= @opportunity.region %> </dd>
  <dt>Data final da vaga: </dt>
  <dd> <%= l @opportunity.end_date %> </dd>
</dl>

<%= link_to  "Voltar", opportunities_path %>
<%=link_to "Editar", edit_opportunity_path(@opportunity)%>
<%=link_to "Apagar vaga", @opportunity,
              method: :delete,
              data: { confirm: 'Deseja realmente apagar?' }%>