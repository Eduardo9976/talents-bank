<!DOCTYPE html>
<html>
  <head>
    <title>TalentsBank</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     
    <section class= "Login">
      <!-- Admin login -->
      <% if admin_signed_in? %>
        <nav>
        <%= link_to 'Logout', destroy_admin_session_path, method: :delete %>
        </nav>  
      <% else%>
        <%= link_to 'headhunters', new_admin_session_path %>
      <% end %>  

      <!-- User login -->
      <% if user_signed_in? %>
        <nav>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        </nav>  
      <% else%>
        <a> <%= link_to 'Área do candidato', new_user_session_path %> </a>
      <% end %>  



      <p> <%= flash[:notice ]%> </p>
      <p> <%= flash[:alert ]%>  </p>
    </section>

    <%= yield %>
  </body>
</html>
